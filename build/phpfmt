#!/bin/bash

OPTS="AlignEquals,AlignConstVisibilityEquals,AlignDoubleArrow,AlignGroupDoubleArrow,AlignDoubleSlashComments,AlignTypehint,GeneratePHPDoc,IndentTernaryConditions,JoinToImplode,OrderAndRemoveUseClauses,OrderMethodAndVisibility,PHPDocTypesToFunctionTypehint,ShortArray,SpaceBetweenMethods,SortUseNameSpace,StripNewlineAfterClassOpen,StripNewlineAfterCurlyOpen,StripNewlineWithinClassBody,StripSpaceWithinControlStructures,WrongConstructorName,DoubleToSingleQuote,SplitElseIf"

php phpf.phar --no-backup --passes=$OPTS "$@"
